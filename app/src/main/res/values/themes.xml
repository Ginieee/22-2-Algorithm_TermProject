<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Boss" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/MainGreen</item>
        <item name="colorPrimaryVariant">@color/MainGreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/SubGreen</item>
        <item name="colorSecondaryVariant">@color/littleGray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/MainGreen</item>
        <!-- Customize your theme here. -->
    </style>

    <!--    top button-->
    <style name="top_selectedButton">
        <item name="android:layout_width">@dimen/top_button_width</item>
        <item name="android:layout_height">@dimen/top_button_height</item>
        <item name="android:background">@drawable/round_rect_green</item>
        <item name="android:textSize">@dimen/top_button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/librefranklin_semibold</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>
    <style name="top_unselectedButton">
        <item name="android:layout_width">@dimen/top_button_width</item>
        <item name="android:layout_height">@dimen/top_button_height</item>
        <item name="android:background">@drawable/round_rect_white</item>
        <item name="android:textSize">@dimen/top_button_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/librefranklin_semibold</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <!--  fixed fragment  -->
    <style name="fixed_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/fixed_box_margin</item>
        <item name="android:layout_marginEnd">@dimen/fixed_box_margin</item>
        <item name="android:layout_marginBottom">@dimen/fixed_box_margin_bottom</item>
    </style>

    <style name="fixed_day">
        <item name="android:layout_width">@dimen/fixed_day_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_top</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/fixed_day_text_size</item>
        <item name="android:fontFamily">@font/librefranklin_semibold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="fixed_day_add">
        <item name="android:layout_width">@dimen/fixed_day_add_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_top_sub</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
        <item name="android:textSize">@dimen/fixed_day_text_size</item>
        <item name="android:fontFamily">@font/librefranklin_semibold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="fixed_body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fixed_body_height</item>
        <item name="android:background">@drawable/round_except_top_left</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="fixed_sleep_time">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textSize">@dimen/text_Mid</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Calendar"/>

    <style name="Calendar.HeaderDateText">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#263238</item>
    </style>

    <style name="Calendar.CalendarViewStyle">
        <item name="dayHeight">100dp</item>
    </style>

    <style name="Calendar.ItemViewStyle">
        <item name="dayTextSize">14dp</item>
        <item name="android:fontFamily">@font/librefranklin_semibold</item>
    </style>

    <style name="fixed_item_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
    </style>

</resources>